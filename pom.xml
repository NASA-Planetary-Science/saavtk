		<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-jar-plugin</artifactId>
        		<version>3.0.2</version>
        		<configuration>
          			<archive>
            				<manifest>
              					<addClasspath>true</addClasspath>
              					<mainClass>edu.jhuapl.saavtk.example.ExampleTool</mainClass>
            				</manifest>
          			</archive>
        		</configuration>
  
      		</plugin>
		<plugin>
        		<artifactId>maven-antrun-plugin</artifactId>
        		<version>1.8</version>
        		<executions>
          			<execution>
            				<phase>compile</phase>
            				<configuration>
						<tasks>
							<mkdir dir="${project.build.directory}/classes/edu/jhuapl/saavtk/data"/>
              						<copy todir="${project.build.directory}/classes/edu/jhuapl/saavtk/data">
								<fileset dir="src/edu/jhuapl/saavtk/data"/>
							</copy>
						</tasks>
            				</configuration>
            				<goals>
              					<goal>run</goal>
            				</goals>
          			</execution>
          			   <execution>
          			        <id>moveVTKFiles</id>
                            <phase>compile</phase>
                            <configuration>
                                <tasks>
                                    <copy todir="/home/apluser/vtkLibs/vtk6.3">
                                        <fileset dir="lib/vtk6.3"/>
                                    </copy>
                                </tasks>
                            </configuration>
                            <goals>
                                <goal>run</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>zipVTKNativeLibs</id>
                            <phase>install</phase>
                            <configuration>
                                <tasks>
                                     <zip destfile="${project.build.directory}/vtkNativeLibs-${version}.zip"
                                        basedir="lib/vtk6.3/"
                                     />
                                </tasks>
                            </configuration>
                            <goals>
                                <goal>run</goal>
                            </goals>
                        </execution>
        		</executions>
      		</plugin>
	  </plugins>
	
